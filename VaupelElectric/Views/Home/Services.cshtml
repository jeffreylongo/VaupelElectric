@model VaupelElectric.ViewModels.ServicesViewModel

@{
    ViewBag.Title = "Services";
}

<div class="splash">
    <div class="logoContainer">
        <img class="img-responsive" id="logoSplash" src="/Images/VE.gif" alt="Vaupel Electric" />
    </div>
</div>

<h2><a href="">Home Services</a></h2>
<h2><a href="#separator">Commercial Services</a></h2>

<div class="homeServiceContainer">
    @foreach (var homeService in Model.HomeServices)
    {
        <a href="Prices">
            <div class="serviceImage">
                <img src="@homeService.Img" height="426" width="426">
                <h3>@homeService.Service</h3>
            </div>
        </a>
    }
</div>

<h3 id="separator"><center>And much more!</center></h3>
<div class="servicesScheduleButton">
    <a href="Contact" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-calendar"></span> Set Appointment!</a>
</div>


<br />
<h2 id="commercial">Commercial Services</h2>

<div class="commercialServiceContainer">
    @foreach (var commercialService in Model.CommercialServices)
    {
        <a href="Prices">
            <div class="serviceImage">
                <img src="@commercialService.Img" height="426" width="426">
                <h3>@commercialService.Service</h3>
            </div>
        </a>
    }
</div>

<h3><center>And much more!</center></h3>
<div class="servicesScheduleButton">
    <a href="Contact" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-calendar"></span> Set Appointment!</a>
</div>

<br />


