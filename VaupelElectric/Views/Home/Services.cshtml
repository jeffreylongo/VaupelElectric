@model VaupelElectric.ViewModels.ServicesViewModel

@{
    ViewBag.Title = "Services";
}

<div class="splash">
    <div class="logoContainer">
        <img class="img-responsive" id="logoSplash" src="/Images/VE.gif" alt="Vaupel Electric" />
    </div>
</div>

<h2 class="servicesHeader"><a href="">Home Services</a></h2>
<h2><a href="#separator">Commercial Services</a></h2>

<div class="homeServiceContainer">
    @foreach (var homeService in Model.HomeServices)
    {
        <a href="Prices">
            <div class="serviceImage">
                <img src="@homeService.Img" height="426" width="426">
                <h3 class="serviceTitle">@homeService.Service</h3>
            </div>
        </a>
    }
</div>

<h3 id="separator"><center>And much more!</center></h3>

<div class="servicesButtons1">
    <div class="scheduleButton">
        <a href="tel:9412847120" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-phone-alt"></span> Call: (941) 284-7120</a>
    </div>
    <div class="quoteButton">
        <a href="Home/Contact" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-usd"></span> Request A Quote!</a>
    </div>
</div>


<br />
<h2 id="commercial">Commercial Services</h2>

<div class="commercialServiceContainer">
    @foreach (var commercialService in Model.CommercialServices)
    {
        <a href="Prices">
            <div class="serviceImage">
                <img src="@commercialService.Img" height="426" width="426">
                <h3 class="serviceTitle">@commercialService.Service</h3>
            </div>
        </a>
    }
</div>

<h3><center>And much more!</center></h3>

<div class="servicesButtons2">
    <div class="scheduleButton">
        <a href="tel:9412847120" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-phone-alt"></span> Call: (941) 284-7120</a>
    </div>
    <div class="quoteButton">
        <a href="Home/Contact" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-usd"></span> Request A Quote!</a>
    </div>
</div>

<br />


