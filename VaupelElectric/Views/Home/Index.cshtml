@{
    ViewBag.Title = "Home Page";
}


<div class="splash">
    <div class="scheduleButton">
        <a href="Home/Contact" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-calendar"></span> Set Appointment!</a>
    </div>
    <img class="img-responsive" id="logoSplash" src="/Images/logo.jpg" alt="Vaupel Electric" />
    <div class="quoteButton">
        <a href="Home/Contact" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-usd"></span> Request A Quote!</a>
    </div>
</div>

<div class="turnTableSplash">
    <div class="carouselMover">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Carousel indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
            </ol>
            <!-- Wrapper for carousel items -->
            <div class="carousel-inner">
                <div class="item active">
                    <a href="Services">
                        <img class="cImage" src="/images/dock.jpg" alt="First Slide" width="550">
                    </a>
                </div>
                <div class="item">
                    <a href="Services">
                        <img class="cImage" src="/images/fan.jpg" alt="Second Slide" width="550">
                    </a>
                </div>
                <div class="item">
                    <a href="Services">
                        <img class="cImage" src="/images/indoor.jpg" alt="Third Slide" width="550">
                    </a>
                </div>
                <div class="item">
                    <a href="Services">
                        <img class="cImage" src="/images/outdoor.jpg" alt="Fourth Slide" width="550" />
                    </a>
                </div>
                <div class="item">
                    <a href="Services">
                        <img class="cImage" src="/images/sconce.jpg" alt="Fifth Slide" width="550" />
                    </a>
                </div>
            </div>
            <!-- Carousel controls -->
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>

