
@{
    ViewBag.Title = "EmailRequest";
}

<h2>EmailRequest</h2>


<head>
    <title>Request for Quote/Info</title>
</head>
<body>
    <h2>Submit Email Request for a Quote or Info on Services</h2>
    <form method="post" action="ProcessRequest">
        <div>
            Your name:
            <input type="text" name="customerName" />
        </div>

        <div>
            Your email address:
            <input type="text" name="customerEmail" />
        </div>

        <div>
            Details about your inquiry: <br />
            <textarea name="customerRequest" cols="45" rows="4"></textarea>
        </div>

        <div>
            <input type="submit" value="Submit" />
        </div>
    </form>
</body>
